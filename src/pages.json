{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },

  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationBarBackgroundColor": "#CCFFFF"
      }
    },
    {
      "path": "pages/square/index",
      "style": {
        "navigationBarTitleText": "广场",
        "navigationBarBackgroundColor": "#CCFFFF"
      }
    },
    {
      "path": "pages/square/components/detail",
      "style": {
        "navigationBarTitleText": "广场",
        "navigationBarBackgroundColor": "#CCFFFF"
      }
    },
    {
      "path": "pages/add/index",
      "style": {
        "navigationBarTitleText": "发布任务"
      }
    },
    {
      "path": "pages/news/index",
      "style": {
        "navigationBarTitleText": "消息",
        "navigationBarBackgroundColor": "#CCFFFF"
      }
    },
    {
      "path": "pages/user/user",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/user/components/login",
      "style": {
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/user/components/set",
      "style": {
        "navigationBarTitleText": "设置"
      }
    },
    {
      "path": "pages/car/index",
      "style": {
        "navigationBarTitleText": "上班拼车"
      }
    },
    {
      "path": "pages/partner/index",
      "style": {
        "navigationBarTitleText": "找搭子"
      }
    },
    {
      "path": "pages/partner/components/detail",
      "style": {
        "navigationBarTitleText": "找搭子"
      }
    }
  ],

  "tabBar": {
    "color": "#909399",
    "selectedColor": "#56e0e0",
    "backgroundColor": "#FFFFFF",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/nav/home.png",
        "selectedIconPath": "static/nav/home_on.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/square/index",
        "iconPath": "static/nav/square.png",
        "selectedIconPath": "static/nav/square_on.png",
        "text": "广场"
      },
      {
        "pagePath": "pages/add/index",
        "iconPath": "static/nav/fabu.png",
        "selectedIconPath": "static/nav/fabu_on.png",
        "text": "发布任务",
        "style": {
          "height": "50px",
          "width": "50px",
          "fontSize": "20px",
          "marginTop": "-10px"
        }
      },
      {
        "pagePath": "pages/news/index",
        "iconPath": "static/nav/news.png",
        "selectedIconPath": "static/nav/news_on.png",
        "text": "消息"
      },
      {
        "pagePath": "pages/user/user",
        "iconPath": "static/nav/me.png",
        "selectedIconPath": "static/nav/me_on.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "backgroundColor": "#F8F8F8",
    "navigationBarBackgroundColor": "#f5f7fa"
  }
}
