{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },

  "pages": [
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/add/index",
      "style": {
        "navigationBarTitleText": "发布任务"
      }
    },

    {
      "path": "pages/user/user",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/car/index",
      "style": {
        "navigationBarTitleText": "上班拼车"
      }
    },
    {
      "path": "pages/partner/index",
      "style": {
        "navigationBarTitleText": "找搭子"
      }
    },
    {
      "path": "pages/partner/components/detail",
      "style": {
        "navigationBarTitleText": "找搭子"
      }
    }
  ],

  "tabBar": {
    "color": "#909399",
    "selectedColor": "#303133",
    "backgroundColor": "#FFFFFF",
    "borderStyle": "black",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/nav/home.png",
        "selectedIconPath": "static/nav/home_on.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/add/index",
        "iconPath": "static/nav/fabu.png",
        "selectedIconPath": "static/nav/fabu_on.png",
        "text": "发布任务"
      },

      {
        "pagePath": "pages/user/user",
        "iconPath": "static/nav/me.png",
        "selectedIconPath": "static/nav/me_on.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "uni-app",
    "backgroundColor": "#F8F8F8",
    "navigationBarBackgroundColor": "#F5F7FA"
  }
}
